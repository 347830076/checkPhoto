page{
   background-color: #f5f5f5;
}
.btn{
  padding: 30rpx;
}
.container{
  padding: 30rpx 40rpx;
  border-radius: 16rpx;
  background-color: #fff;
  margin: 30rpx 30rpx 0;
}
.container>view{
  margin-bottom: 0;
}
.tip{
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.rowCon{
  margin: 20rpx 0;
}
.rowCon text{
  font-size: 32rpx;
}
.rowCon_l{
  display: inline-block;
  /* width: 280rpx; */
  margin-right: 10rpx;
}
.rowCon>text:last-child{
  float: right;
}
.myButton{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.shareBG{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
}
.shareText{
  text-align: center;
  font-size: 40rpx;
  margin-bottom: 40rpx;
}
.shareCon{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  -webkit-transform: translateX(-50%) translateY(-50%);
  width: 500rpx;
  padding: 40rpx;
  background-color: #fff;
  z-index: 3;
}