<view class='rowCon'>
  <view class='row' hover-class="hoverbg">
    <text class='row_l'>机型</text>
    <view class='row_m'>
      <view class=''>{{brand}} {{model}}</view>
    </view>
  </view>
  <view class='row' hover-class="hoverbg">
    <text class='row_l'>操作系统</text>
