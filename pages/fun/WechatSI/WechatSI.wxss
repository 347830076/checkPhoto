page{
  padding-bottom: 20rpx;
}
.tag{
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.tag > text{
  flex: 1;
  line-height: 60rpx;
  color: #999;
  border: 1rpx solid #999;
  text-align: center;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.tag > text.active{
  border: 1rpx solid #10aeff;
  color: #fff;
  background-color: #10aeff;
}
.textCon{
  margin: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}
.textCon .title{
  padding-bottom: 30rpx;
}
.textCon textarea{
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 10rpx;
}
.btnCon{
  display: flex;
  align-items: center;
  justify-content: center;
}
.btnCon > text{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #07c160;
  border-radius: 10rpx;
  margin-right: 30rpx;
  color: #fff;
  background-color: #07c160;
}
.btnCon > text:last-child{
  margin-right: 0;
}
.videoCon{
  padding: 30rpx;
}
.videoCon > view{
  padding: 10rpx 20rpx;
  display: inline-block;
  background-color: #ddd;
  border-radius: 20rpx 20rpx 20rpx 0;
}
.videoCon > view .t{
  color: #999;
}
.videoCon.rightCon{
 text-align: right;
}
.videoCon.rightCon > view{
  color: #fff;
  background-color: #10aeff;
  border-radius: 20rpx 20rpx 0 20rpx;
}
.videoCon.rightCon > view .t{
  color: #ccc;
}
.footer{
  position: fixed;
  width: 100%;
  height: 140rpx;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  background-color: #efeff4;
  z-index: 1;
}
.recordCon{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}
.recordCon > view{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  text-align: center;
}
.recordCon > view .title{
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
.recordCon > view .text{
  color: #10aeff;
  font-size: 32rpx;
  margin: 30rpx 0;
}
.recordCon > view .btn{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #07c160;
  border-radius: 10rpx;
  margin: 0 auto;
}