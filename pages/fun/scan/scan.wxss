.main {
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}

.main_row {
  position: relative;
  padding: 20rpx 0 20rpx 220rpx;
}

.main_row_l {
  float: left;
  width: 220rpx;
  margin-left: -220rpx;
}

.main_row_r {
  word-wrap: break-word;
  word-break: break-all;
}
.main_row_r text{
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  color: #fff;
  background-color: #3CC51F;
  margin-left: 20rpx;
}
