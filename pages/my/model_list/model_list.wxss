.rowCon{
  background-color: #fff;
  margin-top: 20rpx;
}
.row{
  position: relative;
  padding: 30rpx;
}
.row_l{
  position: absolute;
  left: 30rpx;
  top: 50%;
  width: 100rpx;
  height: 100rpx;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  border: 1px solid #e4e4e4;
  border-radius: 100%;
  overflow: hidden;
}
.row_l>image{
  width: 100%;
  height: 100%;
}
.row_m{
  padding-left: 130rpx;
}
.name{
  font-weight: 700;
}
.tip{
  color: #666;
  margin-top: 8rpx;
}
.arrows {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  border-width: 1rpx;
  border-color: #999 #999 transparent transparent;
  border-style: solid;
  -webkit-transform: rotate(45deg) translateY(-50%);
  transform: rotate(45deg) translateY(-50%);
}